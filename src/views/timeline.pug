extends layout.pug

block head
    meta(charset="UTF-8")
    title Pacridon
block content
  #timeline.row
    .col-md-6.col-md-offset-3
        form(v-on:submit="postToot")
            .form-group
                textarea.form-control(v-model="newToot.body" placeholder="今何してる？" required)
            .form-group
                input.btn-primary.btn-block(type="submit" value="toot!" )
        #toots.penel-group
                .panel.panel-default(v-for="toot in toots")
                    .panel-body {{ toot.body }}
